<p>Your seed is <%= @seed %></p>

<%= form_tag '#', :id => 'show-password' do %>
  <%= label_tag :website_name, "Website Name:" %>
  <%= text_field_tag :website_name %><br />
  <%= submit_tag "Show Password" %>
<% end %>

<p id="password"></p>

<table>
  <thead>
    <tr>
      <th></th>
      <% letters.each do |letter| %>
        <th><%= letter %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% letters.each do |row| %>
      <tr>
        <td><%= row %></td>
        <% letters.each do |col| %>
          <td id="<%= row %><%= col %>"><%= random_letter %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :javascript do %>
  <%= javascript_include_tag "pages/passwords" %>
<% end %>
